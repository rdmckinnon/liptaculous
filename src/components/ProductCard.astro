---
interface Props {
	name: string;
	price: string;
	image: string;
	color: string;
}

const { name, price, image, color } = Astro.props;
---

<div
	class="group relative bg-white/40 backdrop-blur-md rounded-[2rem] p-4 hover:bg-white/60 transition-all duration-500 hover:-translate-y-2 border border-white/50 flex flex-col h-full"
>
	<div
		class="aspect-[4/5] rounded-[1.5rem] overflow-hidden mb-5 bg-gradient-to-b from-white/50 to-champagne-pink-300/20 relative group-hover:shadow-inner transition-all duration-500"
	>
		<div
			class="absolute inset-0 flex items-center justify-center group-hover:scale-110 transition-transform duration-700 filter drop-shadow-lg"
		>
			<img src={image} alt={name} class="w-full h-full object-cover" />
		</div>
		<div
			class="absolute top-4 right-4 w-6 h-6 rounded-full border-2 border-white shadow-sm transform group-hover:scale-110 transition-transform"
			style={`background-color: ${color}`}
		>
		</div>
		<div
			class="absolute bottom-0 left-0 right-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300 bg-white/30 backdrop-blur-md"
		>
			<p class="text-xs font-poppins text-mountbatten-400 text-center">
				Tap to shop âœ¨
			</p>
		</div>
	</div>

	<div class="flex flex-col flex-grow">
		<div class="flex justify-between items-start mb-2">
			<h3
				class="font-poppins font-semibold text-lg text-mountbatten-400 leading-tight"
			>
				{name}
			</h3>
			<span
				class="font-quicksand font-bold text-cherry-blossom-500 bg-white/50 px-2 py-1 rounded-lg text-sm"
				>{price}</span
			>
		</div>

		<button
			class="mt-auto w-full py-3 rounded-xl bg-mountbatten-400 text-white font-poppins font-medium text-sm uppercase tracking-widest hover:bg-cherry-blossom-500 hover:shadow-lg hover:shadow-cherry-blossom-500/30 transition-all duration-300 active:scale-95 flex items-center justify-center gap-2 buy-button group-hover:animate-pulse-once"
			data-name={name}
			data-price={price}
			data-image={image}
		>
			<span>Add to Bag</span>
		</button>
	</div>
</div>
