---
import "../styles/global.css";
import ProductCard from "../components/ProductCard.astro";
import ApplePayModal from "../components/ApplePayModal.astro";
import Navbar from "../components/Navbar.astro";
import { products } from "../data/products";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Addy" />
		<title>Liptaculous - The Gloss Boss</title>
		<meta
			name="description"
			content="Liptaculous - Premium lip gloss for the fashion forward."
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Gochi+Hand&family=Pacifico&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Poppins:wght@300;400;500;600;700&family=Quicksand:wght@300;400;500;600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="overflow-x-hidden bg-[#faf9f6]">
		<Navbar />

		<!-- Decorative Background Elements -->
		<div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
			<div
				class="absolute top-[-10%] right-[-5%] w-[600px] h-[600px] bg-cherry-blossom-300/10 rounded-full blur-3xl animate-float"
			>
			</div>
			<div
				class="absolute bottom-[10%] left-[-10%] w-[700px] h-[700px] bg-champagne-pink-300/20 rounded-full blur-3xl animate-float"
				style="animation-delay: -3s;"
			>
			</div>
			<div
				class="absolute top-[40%] right-[20%] w-[300px] h-[300px] bg-pink-300/10 rounded-full blur-2xl animate-pulse"
			>
			</div>
		</div>

		<main class="relative z-10">
			<!-- Hero Section -->
			<section
				class="min-h-screen flex flex-col justify-center items-center text-center px-4 pt-20 relative"
			>
				<div
					class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-r from-cherry-blossom-300/20 to-champagne-pink-300/20 rounded-full blur-[100px] -z-10"
				>
				</div>

				<span
					class="font-poppins text-mountbatten-400 tracking-[0.3em] uppercase text-sm md:text-base mb-6 animate-fade-in"
					>Est. 2025 ‚Ä¢ Designed by Addy</span
				>

				<h1
					class="font-playfair italic text-7xl md:text-9xl text-mountbatten-400 mb-6 leading-tight drop-shadow-sm animate-fade-in-up"
				>
					Gloss Like <br />
					<span class="text-cherry-blossom-500 not-italic font-gochi"
						>A Boss</span
					>
				</h1>
				<p
					class="font-quicksand text-mountbatten-300 text-xl md:text-2xl max-w-2xl mb-10 leading-relaxed animate-fade-in-up delay-100"
				>
					Hand-mixed by Addy at home for the girl who dreams big. <br
					/> Vegan, cruelty-free, and totally fabulous.
				</p>

				<div class="flex gap-4 animate-fade-in-up delay-200">
					<a
						href="#shop"
						class="px-10 py-4 rounded-full bg-mountbatten-400 text-white font-poppins font-semibold uppercase tracking-widest hover:bg-cherry-blossom-500 hover:scale-105 transition-all duration-300 shadow-lg shadow-mountbatten-400/20"
					>
						Shop The Drop
					</a>
				</div>

				<!-- Scroll Indicator -->
				<div
					class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce"
				>
					<svg
						class="w-6 h-6 text-mountbatten-300"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						><path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg
					>
				</div>
			</section>

			<!-- Shop Section -->
			<section id="shop" class="py-24 px-4 container mx-auto">
				<div class="flex flex-col items-center mb-16">
					<h2
						class="font-playfair text-4xl md:text-5xl text-mountbatten-400 mb-4 text-center"
					>
						The Collection
					</h2>
					<div class="w-24 h-1 bg-cherry-blossom-400 rounded-full">
					</div>
				</div>

				<div
					class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
				>
					{products.map((product) => <ProductCard {...product} />)}
				</div>
			</section>

			<!-- About Section -->
			<section id="about" class="py-24 bg-white/50 backdrop-blur-sm">
				<div class="container mx-auto px-4">
					<div
						class="flex flex-col md:flex-row items-center gap-12 max-w-5xl mx-auto"
					>
						<div class="w-full md:w-1/2">
							<div
								class="aspect-[4/5] bg-gray-200 rounded-[2rem] overflow-hidden relative group"
							>
								<!-- Placeholder for Addy's photo -->
								<div
									class="absolute inset-0 bg-gradient-to-tr from-cherry-blossom-300 to-champagne-pink-300 flex items-center justify-center text-white text-9xl opacity-80"
								>
									üë©‚Äçüé®
								</div>
							</div>
						</div>
						<div class="w-full md:w-1/2 text-center md:text-left">
							<span
								class="font-poppins text-cherry-blossom-500 font-bold tracking-widest uppercase mb-2 block"
								>The Founder</span
							>
							<h2
								class="font-playfair text-4xl md:text-5xl text-mountbatten-400 mb-6"
							>
								Meet Addy
							</h2>
							<p
								class="font-quicksand text-mountbatten-300 text-lg mb-6 leading-relaxed"
							>
								"I started Liptaculous because I couldn't find a
								gloss that was shiny enough but not sticky. I
								wanted to create something that makes every girl
								feel like a queen. Every shade is named after
								things that make me happy!"
							</p>
							<div
								class="font-gochi text-3xl text-mountbatten-400 transform -rotate-2"
							>
								xoxo, Addy
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Reviews / Social Proof -->
			<section id="reviews" class="py-24 container mx-auto px-4">
				<h2
					class="font-playfair text-4xl text-center text-mountbatten-400 mb-16"
				>
					Squad Love üíñ
				</h2>
				<div
					class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto"
				>
					{
						[
							{
								text: "Literally the best gloss I've ever used. Not sticky AT ALL!",
								author: "Mia, 12",
							},
							{
								text: "Sparkle Berry is my life now. I wear it to school every day.",
								author: "Sophia, 11",
							},
							{
								text: "My mom keeps stealing my Vanilla Dream! Need to buy more.",
								author: "Emma, 11",
							},
						].map((review) => (
							<div class="bg-white p-8 rounded-3xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
								<div class="flex text-cherry-blossom-400 mb-4">
									‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ
								</div>
								<p class="font-quicksand text-mountbatten-300 mb-6 italic">
									"{review.text}"
								</p>
								<p class="font-poppins font-bold text-mountbatten-400 text-sm">
									- {review.author}
								</p>
							</div>
						))
					}
				</div>
			</section>

			<!-- Newsletter Section -->
			<section class="py-24 px-4">
				<div
					class="w-full max-w-4xl mx-auto bg-gradient-to-r from-cherry-blossom-300/20 to-pink-300/20 backdrop-blur-md rounded-[3rem] p-8 md:p-16 text-center relative overflow-hidden"
				>
					<h3
						class="font-playfair text-3xl md:text-4xl text-mountbatten-400 mb-4 relative z-10"
					>
						Join the Gloss Gang
					</h3>
					<p
						class="font-quicksand text-mountbatten-300 mb-8 text-lg relative z-10 max-w-xl mx-auto"
					>
						Get the tea on new drops, secret sales, and birthday
						treats! üéÇ
					</p>

					<form
						action="https://formspree.io/f/xdkpbdbq"
						method="POST"
						class="flex flex-col sm:flex-row gap-4 relative z-10 max-w-lg mx-auto"
					>
						<input
							type="email"
							name="email"
							placeholder="Your email..."
							required
							class="flex-1 px-6 py-4 rounded-full bg-white border-2 border-white focus:border-cherry-blossom-400 focus:outline-none transition-all font-poppins text-mountbatten-400"
						/>
						<button
							type="submit"
							class="px-8 py-4 rounded-full bg-mountbatten-400 text-white font-poppins font-bold uppercase tracking-wider hover:bg-cherry-blossom-500 transition-all duration-300"
						>
							Join
						</button>
					</form>
				</div>
			</section>

			<!-- Footer -->
			<footer class="bg-white py-12 border-t border-gray-100">
				<div class="container mx-auto px-4 text-center">
					<div
						class="font-gochi text-3xl text-cherry-blossom-500 mb-8"
					>
						Liptaculous
					</div>

					<div class="flex justify-center gap-8 mb-8">
						<a
							href="#"
							class="text-mountbatten-300 hover:text-cherry-blossom-500 transition-colors"
							>Instagram</a
						>
						<a
							href="#"
							class="text-mountbatten-300 hover:text-cherry-blossom-500 transition-colors"
							>TikTok</a
						>
						<a
							href="#"
							class="text-mountbatten-300 hover:text-cherry-blossom-500 transition-colors"
							>Contact</a
						>
					</div>

					<p class="font-quicksand text-sm text-mountbatten-200">
						¬© 2025 Liptaculous. Made with ‚ú® by Addy.
					</p>
				</div>
			</footer>
		</main>

		<ApplePayModal />
	</body>
</html>
