		<style>
			.floral-background {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 0;
				pointer-events: none;
			}

			.flower {
				position: absolute;
				opacity: 0;
				animation: fadeInFloat 2s ease-in-out forwards;
			}

			.flower-1 {
				width: 300px;
				height: 300px;
				top: -50px;
				right: -50px;
				animation-delay: 0.3s;
			}

			.flower-2 {
				width: 250px;
				height: 250px;
				bottom: 50px;
				left: -30px;
				animation-delay: 0.6s;
			}

			.flower-3 {
				width: 200px;
				height: 200px;
				top: 50%;
				right: -40px;
				transform: translateY(-50%);
				animation-delay: 0.9s;
			}

			.leaf {
				position: absolute;
				opacity: 0;
				animation: fadeInFloat 2s ease-in-out forwards;
			}

			.leaf-1 {
				width: 150px;
				height: 200px;
				top: 20%;
				left: 10%;
				transform: rotate(-20deg);
				animation-delay: 1.2s;
			}

			.leaf-2 {
				width: 120px;
				height: 180px;
				bottom: 20%;
				right: 15%;
				transform: rotate(30deg);
				animation-delay: 1.5s;
			}

			.leaf-3 {
				width: 100px;
				height: 150px;
				top: 60%;
				left: 5%;
				transform: rotate(-45deg);
				animation-delay: 1.8s;
			}

			@keyframes fadeInFloat {
				from {
					opacity: 0;
					transform: translateY(20px) rotate(0deg);
				}
				to {
					opacity: 1;
					transform: translateY(0) rotate(0deg);
				}
			}

			.petal-group {
				animation: gentleRotate 20s ease-in-out infinite;
			}

			@keyframes gentleRotate {
				0%, 100% {
					transform: rotate(0deg);
				}
				50% {
					transform: rotate(5deg);
				}
			}

			.container {
				position: relative;
				z-index: 1;
				min-height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 2rem;
			}

			.content {
				max-width: 600px;
				text-align: center;
				animation: fadeIn 1s ease-in-out;
			}

			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(30px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			.logo-section {
				margin-bottom: 3rem;
			}

			.brand-name {
				font-family: 'Gochi Hand', cursive;
				font-size: 140px;
				font-weight: 400;
				color: var(--cherry-blossom-300);
				margin-bottom: 0.5rem;
				letter-spacing: 2px;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
			}

			.tagline {
				font-family: 'Poppins', sans-serif;
				font-size: clamp(0.9rem, 2vw, 1.1rem);
				color: var(--mountbatten-400);
				font-weight: 300;
				letter-spacing: 3px;
				text-transform: uppercase;
			}

			.hero-section {
				margin-bottom: 3rem;
			}

			.coming-soon {
				font-family: 'Playfair Display', serif;
				font-size: clamp(2rem, 5vw, 3rem);
				color: var(--pink-300);
				margin-bottom: 1.5rem;
				font-weight: 600;
			}

			.description {
				font-family: 'Poppins', sans-serif;
				font-size: clamp(1rem, 2.5vw, 1.2rem);
				color: var(--mountbatten-300);
				line-height: 1.8;
				font-weight: 300;
			}

			.email-signup {
				margin-bottom: 3rem;
			}

			.signup-form {
				display: flex;
				gap: 0.5rem;
				margin-bottom: 1rem;
				flex-wrap: wrap;
				justify-content: center;
			}

			.email-input {
				flex: 1;
				min-width: 250px;
				padding: 1rem 1.5rem;
				border: 2px solid var(--cherry-blossom-400);
				border-radius: 50px;
				font-family: 'Poppins', sans-serif;
				font-size: 1rem;
				background-color: rgba(255, 255, 255, 0.9);
				color: var(--mountbatten-200);
				transition: all 0.3s ease;
			}

			.email-input:focus {
				outline: none;
				border-color: var(--pink-400);
				box-shadow: 0 0 0 3px rgba(255, 202, 212, 0.2);
			}

			.submit-btn {
				padding: 1rem 2.5rem;
				background: linear-gradient(135deg, var(--cherry-blossom-400), var(--pink-400));
				color: white;
				border: none;
				border-radius: 50px;
				font-family: 'Poppins', sans-serif;
				font-size: 1rem;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.3s ease;
				text-transform: uppercase;
				letter-spacing: 1px;
			}

			.submit-btn:hover {
				transform: translateY(-2px);
				box-shadow: 0 10px 25px rgba(244, 172, 183, 0.4);
			}

			.submit-btn:active {
				transform: translateY(0);
			}

			.privacy-note {
				font-family: 'Poppins', sans-serif;
				font-size: 0.85rem;
				color: var(--mountbatten-400);
				font-weight: 300;
			}

			.social-links {
				display: flex;
				gap: 1.5rem;
				justify-content: center;
			}

			.social-icon {
				width: 40px;
				height: 40px;
				display: flex;
				align-items: center;
				justify-content: center;
				color: var(--cherry-blossom-400);
				transition: all 0.3s ease;
			}

			.social-icon:hover {
				color: var(--pink-300);
				transform: translateY(-3px);
			}

			.social-icon svg {
				width: 100%;
				height: 100%;
			}

			.founder-signature {
				margin-top: 3rem;
				text-align: center;
				opacity: 0.4;
				transition: opacity 0.5s ease;
			}

			.founder-signature:hover {
				opacity: 1;
			}

			.signature-text {
				font-family: 'Playfair Display', serif;
				font-size: 1.5rem;
				font-style: italic;
				color: var(--cherry-blossom-400);
				cursor: help;
				transition: all 0.3s ease;
				display: inline-block;
			}

			.signature-text:hover {
				color: var(--pink-300);
				transform: scale(1.1);
				text-shadow: 0 0 10px rgba(244, 172, 183, 0.5);
			}

			@media (max-width: 640px) {
				.brand-name {
					font-size: 80px;
				}

				.signup-form {
					flex-direction: column;
					align-items: stretch;
				}

				.email-input {
					min-width: 100%;
				}

				.submit-btn {
					width: 100%;
				}
			}

			@media (max-width: 400px) {
				.brand-name {
					font-size: 60px;
				}
			}
		</style>
	</body>
</html>
